@using Spice.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
 }
 <html>
    <head>
        <script src="https://kit.fontawesome.com/feb88f8ab5.js" crossorigin="anonymous"></script>
    </head>

 <br /><br />
      <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Category List</h2>
            </div>
            <div class="col-6 text-right">
                 <partial name="_CreateButtonPartial"/>
            </div>
        </div>
      </div>

      <br />   
        <div>
         @if (Model.Count() > 0)
         {                
          <table class="table table-table-striped border">
          <tr class="table-secondary">
              <th>
                  @Html.DisplayNameFor(m => m.Name)
              </th>
              <th></th>
              <th></th>
              @foreach (var item in Model)
              {
               <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    EDIT | DELETE | DETAILS
                </td>   
               </tr>
              }
          </tr>
        </table>
    
    }
    else
    {
        <p>No records exists.</p>
    }
     </div>
 </html>